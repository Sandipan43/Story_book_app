<h5>Dashbord</h5>
<div class="divider"></div>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
          <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Status</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt "MMMM Do YYYY , h:mm:ss a"}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                  <a href="/stories/edit/{{_id}}" style="float: left; margin-right:15px"><i class="fas fa-edit"></i></a>
                  <form action="/stories/{{_id}}?_method=DELETE" method="POST">
                  <button type="submit"><i class="fas fa-trash" style="color: red;"></i></button>
                  </form>
                </td>
            </tr>            
          {{/each}}
          </tbody>
    </table>
{{else}}
    <p>You are not created any stories</p>
{{/if}}