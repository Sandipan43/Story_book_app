    <h3>{{story.title}}</h3>
    <p>{{story.status}} story</p>
    <div class="row">
        <div class="col s8">
            <div class="card cardStyle">
            <div class="card-image">  
                {{{editIcon story.user._id authId story._id}}}              
            </div> 
            <div class="card-content">
                <h5>{{ formatDate story.createdAt 'MMMM Do YYYY ,h:mm:ss a'}}</h5> 
                <div class="divider"></div>               
                <p>{{story.body}}</p>                
            </div> 
        </div>
    </div>    
    <div class="col s4">
        <div>
        <h3>{{story.user.displayName}}</h3>
        <img src="{{story.user.image}}"style="width:200px;height:200px" alt=""/>
        <a href="/stories/user/{{story.user._id}}" class="btn" style="width: 200px;">More from {{story.user.firstName}}</a>
        </div>
    </div>               
    </div>
  