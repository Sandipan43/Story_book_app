<h1>Stories</h1>
<div class="row">
    {{#each stories as |value key|}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon value.user._id ../authUserId value._id}}}
            </div> 
            <div class="card-content center-align">
                <h5>{{value.title}}</h5>
                <p style="height: 60px;">{{trancate value.body 100}}</p>
                <br/>
                <div class="chip">
                    <img src="{{user.image}}" alt=""/>
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>  
            <div class="card-action center-align">
                <a href="/stories/{{value._id}}" class="btn grey">Read More</a>
            </div>                       
        </div>
    </div>
    {{else}}
        <p>No stories to display</p>
    {{/each}}
</div>